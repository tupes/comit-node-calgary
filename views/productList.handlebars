 <h1 class="head1" style="color: darkblue; text-align:center" >Total List of Products</h1>
<a class="btn btn-primary" style="background-color:forestgreen" href="/addOrEditProducts"><i class="fa fa-plus"></i> Add New Inventory</a>
<table class="table table-striped" style="color:black">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>Model</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{this.productName}}</td>
            <td>{{this.model}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>
            <td>
                <a href="/updateProduct/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true" style="color: green"></i></a>
                <a href="/deleteProduct/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true" style="color:red"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>